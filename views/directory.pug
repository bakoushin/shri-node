html
  head
    title Git Eye
  body
    h2 --
    include _branches.pug
    include _tabs-files.pug
    ul
      if path != ''
        - path = path + '/';
        li 
          a(href='/' + branch + '/files/' + path + '..') ..
      each f in files
        li
          if f.isDirectory
            a(href='/' + branch + '/files/' + path + f.name)= f.name
          else
            a(href='/' + branch + '/files/' + path + f.name)= f.name
            span= f.size